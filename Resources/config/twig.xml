<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.extension.time.class">EWZ\Bundle\TimeBundle\Twig\Extension\TimeExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.time.class.time" class="%twig.extension.time.class%">
            <tag name="twig.extension" />
        	<argument type="service" id="templating.helper.time" />
        </service>
    </services>
</container>
