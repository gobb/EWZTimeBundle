<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="templating.helper.time.class">EWZ\TimeBundle\Templating\Helper\TimeHelper</parameter>
    </parameters>

    <services>
        <service id="templating.helper.time" class="%templating.helper.time.class%">
            <tag name="templating.helper" alias="time" />
        </service>
    </services>
</container>
